@model IEnumerable<ProyectoProgra.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:darkviolet;">Nuestros productos</h1>

<p>
    <a asp-action="Create">Agregar producto</a>
</p>

@foreach (var item in Model)
{
    <div class="wrapper">
        
        <div class="one">
            @Html.DisplayFor(modelItem => item.Nombre)
        </div>
        <div class="one">
           $ @Html.DisplayFor(modelItem => item.Precio)
        </div>
        
        <div class="one">
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>  ________________________
            <a asp-action="Details" asp-route-id="@item.Id">Details</a>  ________________________
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>  ________________________
        </div>
    </div>
}
